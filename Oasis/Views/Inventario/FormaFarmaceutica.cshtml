@model IEnumerable<Oasis.Models.forma_farmaceutica>

<p>
    <a href="CrearFormaFarmaceutica" class="btn btn-info">Crear nuevo </a>
</p>
    
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                NOMBRE
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.id_forma_farmaceutica)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "EditarFormaFarmaceutica", new { id = item.id_forma_farmaceutica }) |
                                    @Html.ActionLink("Borrar", "Delete", new { id = item.id_forma_farmaceutica })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
