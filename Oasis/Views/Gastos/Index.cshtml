@model IEnumerable<Oasis.Models.productos>

@{
    ViewBag.Title = "Inicio";
    ViewBag.Modulo = "Producto";
}


<p>
    <a href="Gastos/Create"> <button class="btn btn-info">Crear nuevo</button></a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <tr>
                            <th>
                                Código
                            </th>
                            <th>
                                Descripción
                            </th>
                            <th>
                               Valor unitario
                            </th>
                            <th>
                                Categoría
                            </th>
                            <th>
                                UM
                            </th>
                            <th>
                                IVA
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_producto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.valor_unitario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.categoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.um)
                        </td>
                        <td>
                            @*@(modelItem=>item.grava_iva ? "Yes" : "No");*@

                            @Html.DisplayFor(modelItem => item.iva, "YesNo")
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.id_producto }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.id_producto }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_producto })
                        </td>
                    </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>